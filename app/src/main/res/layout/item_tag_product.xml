<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="55dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_package_green" />

        <TextView
            android:id="@+id/txt_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="150dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_product"
            android:maxLines="1"
            android:text="@string/product_name"
            android:textColor="#3ca0a0"
            android:textSize="17dp"
            android:textStyle="bold" />

        <!--<View-->
        <!--android:layout_width="1dp"-->
        <!--android:layout_height="15dp"-->
        <!--android:id="@+id/view_1"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:layout_toRightOf="@+id/txt_product_name"-->
        <!--android:background="@color/black_light"/>-->

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/txt_product_type"-->
        <!--android:layout_toRightOf="@+id/view_1"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:text="@string/product_type"/>-->

        <LinearLayout
            android:id="@+id/ll_num_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_product_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_product"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/icon_cart_green" />

            <TextView
                android:id="@+id/txt_num_product"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/gray_light_main" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:background="@color/gray_light_main" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/icon_tag_green" />

            <TextView
                android:id="@+id/txt_price_product"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/gray_light_main" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:background="@color/gray_light_main" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/icon_money_green" />

            <TextView
                android:id="@+id/txt_product_price"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_num_product"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_product"
                android:textColor="@color/gray_light_main" />


        </LinearLayout>


        <Button
            android:id="@+id/imageButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_del_green" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_light_main" />
    </RelativeLayout>
</RelativeLayout>